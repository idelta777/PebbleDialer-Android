<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="15dp"
                  android:clipToPadding="false">

        <include
            android:id="@+id/tip_no_notification_service"
            layout="@layout/tip_no_notification_service"/>

        <include
            layout="@layout/tip_disable_pebble_notification"/>
        <include
            layout="@layout/tip_filtering"/>
        <include
            layout="@layout/tip_call_history_calls"/>
        <include
            android:id="@+id/tip_tertiary_text"
            layout="@layout/tip_tertiary_text"/>
        <include
            android:id="@+id/tip_faq"
            layout="@layout/tip_faq"/>

    </LinearLayout>
</ScrollView>