<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    android:title="Skip filtering contact groups"/>
    <Preference
        android:key="help"
        android:title="@string/setting_help_and_faq"/>

    <PreferenceCategory
        android:key="cat_dialer"
        android:title="@string/setting_category_dialer">
        <Preference
            android:key="displayedGroups"
            android:summary="@string/setting_displayed_groups"
            android:title="@string/setting_displayed_groups_description"/>
        <CheckBoxPreference
            android:title="@string/setting_skip_group_filtering"
            android:key="skipGroupFiltering"
            android:summary="@string/setting_skip_group_filtering_description" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="cat_call"
        android:title="@string/setting_category_call_screen">
        <CheckBoxPreference
            android:key="popupOnIncoming"
            android:title="@string/setting_enable_incoming_popup"
            android:summary="@string/setting_enable_incoming_popup_description"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="popupOnOutgoing"
            android:title="@string/setting_enable_outgoing_popup"
            android:summary="@string/setting_enable_outgoing_popup_description"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:key="closeToLastApp"
            android:summary="@string/setting_close_to_last_app_description"
            android:title="@string/setting_close_to_last_app"/>
        <CheckBoxPreference
            android:key="rootMode"
            android:summary="@string/setting_root_mode_description"
            android:title="@string/setting_root_mode"/>
        <CheckBoxPreference
            android:title="@string/setting_light_screen_on_call"
            android:key="lightOnCallWindow"
            android:summary="@string/setting_light_screen_on_call_descripton" />
        <CheckBoxPreference
            android:key="enableCallTimer"
            android:summary="@string/setting_call_timer_description"
            android:title="@string/setting_call_timer"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:title="@string/setting_no_vibrate_when_charging"
            android:key="dontVibrateWhenCharging"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:title="@string/setting_caller_image"
            android:key="displayCallerImage"
            android:summary="@string/setting_caller_image_description"
            android:defaultValue="true"/>
        <CheckBoxPreference
            android:title="@string/setting_caller_name_bottom"
            android:key="bottomCallerName"
            android:summary="@string/setting_caller_name_bottom_description"
            android:defaultValue="true"/>
        <PreferenceScreen
            android:key="cat_buttons"
            android:title="@string/category_call_buttons"
            android:summary="@string/category_call_buttons_description">
            <ListPreference
                android:defaultValue="2"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingUp"
                android:summary="@string/button_ring_up_description"
                android:title="@string/button_ring_up"/>
            <ListPreference
                android:defaultValue="0"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingSelect"
                android:summary="@string/button_ring_select"
                android:title="@string/button_ring_select_description"/>
            <ListPreference
                android:defaultValue="1"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingDown"
                android:summary="@string/button_ring_down_description"
                android:title="@string/button_ring_down"/>
            <ListPreference
                android:defaultValue="999"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingUpHold"
                android:summary="@string/button_ring_up_hold_description"
                android:title="@string/button_ring_up_hold"/>
            <ListPreference
                android:defaultValue="5"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingSelectHold"
                android:summary="@string/button_ring_select_hold_description"
                android:title="@string/button_ring_select_hold"/>
            <ListPreference
                android:defaultValue="6"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingDownHold"
                android:summary="@string/button_ring_down_hold_description"
                android:title="@string/button_ring_down_hold"/>
            <ListPreference
                android:defaultValue="2"
                android:entries="@array/actionsRingingNames"
                android:entryValues="@array/actionsRingingValues"
                android:key="callButtonRingShake"
                android:summary="@string/button_ring_shake_description"
                android:title="@string/button_ring_shake"/>
            <ListPreference
                android:defaultValue="3"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedUp"
                android:summary="@string/button_established_up_description"
                android:title="@string/button_established_up"/>
            <ListPreference
                android:defaultValue="4"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedSelect"
                android:summary="@string/button_established_select_description"
                android:title="@string/button_established_select"/>
            <ListPreference
                android:defaultValue="1"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedDown"
                android:summary="@string/button_established_down_description"
                android:title="@string/button_established_down"/>
            <ListPreference
                android:defaultValue="999"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedUpHold"
                android:summary="@string/button_established_up_hold_description"
                android:title="@string/button_established_up_hold"/>
            <ListPreference
                android:defaultValue="999"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedSelectHold"
                android:summary="@string/button_established_select_hold_description"
                android:title="@string/button_established_select_hold"/>
            <ListPreference
                android:defaultValue="999"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedDownHold"
                android:summary="@string/button_established_down_hold_description"
                android:title="@string/button_established_down_hold"/>
            <ListPreference
                android:defaultValue="999"
                android:entries="@array/actionsCallEstablishedNames"
                android:entryValues="@array/actionsCallEstablishedValues"
                android:key="callButtonEstablishedShake"
                android:summary="@string/button_established_shake_description"
                android:title="@string/button_established_shake"/>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="cat_fonts"
            android:title="@string/category_fonts">
            <ListPreference
                android:defaultValue="2"
                android:entries="@array/pebbleFonts"
                android:entryValues="@array/fontValues"
                android:key="fontTimer"
                android:title="@string/font_timer"/>
            <ListPreference
                android:defaultValue="7"
                android:entries="@array/pebbleFonts"
                android:entryValues="@array/fontValues"
                android:key="fontName"
                android:title="@string/font_caller_name"/>
            <ListPreference
                android:defaultValue="2"
                android:entries="@array/pebbleFonts"
                android:entryValues="@array/fontValues"
                android:key="fontNumberType"
                android:title="@string/font_number_type"/>
            <ListPreference
                android:defaultValue="3"
                android:entries="@array/pebbleFonts"
                android:entryValues="@array/fontValues"
                android:key="fontNumber"
                android:title="@string/font_number"/>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/category_sms">
        <Preference android:key="smsCannedResponsesDialog"
                    android:title="@string/setting_canned_responses"
                    android:summary="@string/setting_canned_responses_description"/>
        <CheckBoxPreference android:key="timeVoice"
                            android:title="@string/setting_time_voice"
                            android:defaultValue="true"
                            android:summary="@string/setting_time_voice_description" />
        <CheckBoxPreference android:key="phoneVoice"
                            android:title="@string/setting_phone_voice"
                            android:defaultValue="true"
                            android:summary="@string/setting_phone_voice_description" />
        <CheckBoxPreference android:key="enableSMSWriting"
                            android:title="@string/setting_sms_writing"
                            android:defaultValue="true"
                            android:summary="@string/setting_sms_writing_description" />
        <Preference android:key="smsWritingPhrasesDialog"
                    android:title="@string/setting_writing_phrases"
                    android:summary="@string/setting_writing_phrases_description" />


    </PreferenceCategory>
    <PreferenceCategory
        android:key="cat_notify"
        android:title="@string/category_notification_answer">
        <Preference
            android:key="enableServiceButton"
            android:summary="@string/setting_notification_service_button_description"
            android:title="@string/setting_notification_service_button"/>
        <EditTextPreference
            android:defaultValue="Answer"
            android:key="callNotificationAnswerButton"
            android:title="@string/setting_answer_button"/>
        <EditTextPreference
            android:defaultValue="Dismiss"
            android:key="callNotificationDeclineButton"
            android:title="@string/setting_decline_button"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/category_about">
        <Preference
            android:key="version"
            android:title="@string/setting_installed_version"/>
        <CheckBoxPreference
            android:key="enableLogWriter"
            android:summary="@string/setting_log_writer_description"
            android:title="@string/setting_log_writer"/>
        <Preference
            android:key="license"
            android:title="@string/setting_open_source_licenses"/>
        <Preference
            android:key="donateButton"
            android:summary="@string/setting_donate_description"
            android:title="@string/setting_donate"/>
    </PreferenceCategory>
</PreferenceScreen>